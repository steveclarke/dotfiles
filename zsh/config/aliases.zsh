# Standard stuff...
alias ff='clear'
alias reload='. ~/.zshrc'
alias flush='dscacheutil -flushcache'
alias ..='cd ..'

# Make an easy symbolic link today.
alias slink='ln -s'

# Instead of man you can use the more englishy 'help'
alias help='man'

# ls
alias ls='ls -FG'
alias ll='ls -lFG'
alias la='ls -AFG'
alias lla='ls -lAFG'

# vim
alias m='mvim'
alias v='vim'

# git
alias gs='git status'
alias gpu='git push'
alias gpl='git pull'
alias gc='git commit -v'
alias gca='git commit -va'
alias ga='git add'
alias gl='git lg'
alias gcm='git commit -m'
alias gcam='git commit -a -m'

# get me to li1 quickly
alias li1='ssh li1'

# gems
alias gi='gem install'
alias gun='gem unpack' # Sounds violent, but just helps in the command line...
alias gu='gem uninstall'
alias gup='gem update'
alias gw='gem which'

# Open apps on osx from the command line
alias mou='open /Applications/Mou.app'
alias chrome='open /Applications/"Google Chrome".app/'

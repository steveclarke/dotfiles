#!/usr/bin/env bash

is_installed() {
	command -v "$1" >/dev/null 2>&1
}

banner() {
	echo "=== Installing $1"
}

skipping() {
	echo "=== skipping $1 - already installed"
}

# [[ Homebrew ]]
if ! is_installed brew; then
	banner "Homebrew"

	/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)" &&
		cd ~/dotfiles &&
		(
			echo
			echo 'eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"'
		) >>/home/steve/.bashrc &&
		eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)" &&
		brew bundle
else
	echo "Running brew bundle"
	cd ~/dotfiles && brew bundle
fi

# [[ fish ]]
if ! is_installed fish; then
	banner "fish"

	sudo apt-add-repository -y ppa:fish-shell/release-3
	sudo apt update && sudo apt install -y fish
else
	skipping "fish"
fi

# [[ asdf ]]
if ! test -d ~/.asdf; then
	banner "asdf"

	git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.13.1
else
	skipping "asdf"
fi

# [[ xclip ]]
if ! is_installed xclip; then
	banner "xclip"
	sudo apt update && sudo apt install -y xclip
else
	skipping "xclip"
fi

# [[ stow ]]
if ! is_installed stow; then
	banner "stow"
	sudo apt update && sudo apt install -y stow
else
	skipping "stow"
fi

# [[ i3 Window Manager Requirements ]]
if [ -n "$DOTFILES_CONFIG_I3" ]; then
	banner "i3 Requirements"
	if ! is_installed polybar; then
		banner "polybar"
		sudo apt update && sudo apt install -y polybar
	fi
	if ! is_installed rofi; then
		banner "rofi"
		sudo apt update && sudo apt install -y rofi
	fi
	if ! is_installed picom; then
		banner "picom"
		sudo apt update && sudo apt install -y picom
	fi
else
	skipping "i3 Requirements"
fi

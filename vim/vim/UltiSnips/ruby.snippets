snippet get "A quick snippet for a Sinatra get statement." b
get '/$1' do
  ${2:template} :$1
  $0
end
endsnippet

snippet post "A snippet for Sinatra post statements." b
post '/$1' do
  ${0:# ...}
end
endsnippet

snippet put "A snippet for Sinatra put statements." b
